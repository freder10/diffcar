export class AppComponent {
  // On stocke l'URL actuelle dans une variable simple
  currentUrl: string = '';

  constructor(private router: Router) {
    // Cette partie est CRUCIAL : elle force la mise à jour à chaque clic
    this.router.events.pipe(
      filter(event => event instanceof NavigationEnd)
    ).subscribe(() => {
      this.currentUrl = this.router.url;
    });
  }

  // Votre fonction simplifiée
  isNotHome(): boolean {
    // On compare avec l'URL stockée qui est mise à jour en temps réel
    return this.currentUrl !== '/' && this.currentUrl !== '/accueil';
  }
}
